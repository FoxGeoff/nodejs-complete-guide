  <body>
    <%- include('../includes/navigation.ejs') %>

    <main> these are the products
        <% if (prods.length > 0) { %>
            <h1>My Products</h1>
            <grid>  
                <% for (let poduct of prods) { %>
                    
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= poduct.title %></h1>
                        </header>

                        <div class="card__image">
                        <img
                            src="<%= poduct.imageUrl %>"
                            alt="<%= poduct.title %>"
                        />
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= poduct.price %></h2>
                            <p><%= poduct.description %></p>                                
                        </div>
                        <div class="card__action">
                            <button class="btn">Add to Cart</button>
                        </div>          
                    </article>
                    
                <% } %>
            </grid> 
        <% } else { %>
            <h1>Not products found to display!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
