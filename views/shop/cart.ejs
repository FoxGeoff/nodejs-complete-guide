  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <h1> <%= pageTitle %></h1>
         
        <% if (products.length > 0) { %>

            <% for (let p of products) { %>
                <h4 class="product__title">Description: <%= p.productData.title%> | Price: $<%= p.productData.price%> | Quantity: <%= p.qty %></h4>           
            <% } %>
            <hr>
            <h4>Total: $191.00</h4>

        <% } else { %>   
            <h4>Your Shopping Cart is Empty!</h4>
        <% } %>    
    </main>
    

