<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <h1>My Product-list</h1>  
                <% for (let poduct of prods) { %>
                    <div class="grid">
                        <article class="card product-item">

                            <header class="card__header">
                                <h1 class="product__title"><%= poduct.title %></h1>
                            </header>

                            <div class="card__image">
                            <img
                                src="<%= poduct.imageUrl %>"
                                alt="<%= poduct.title %>"
                            />
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%= poduct.price %></h2>
                                <p><%= poduct.description %></p>                                
                            </div>
 
                            <div class="container">
                                <a href="/details" class="button-a">Details</a>
                             <form action="/add-to-cart" method="POST">
                               <button class="button-btn" type="submit">Add to Cart</button>
                             </form>
                           </div> 

                        </article>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <h1>Not products found to display!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
